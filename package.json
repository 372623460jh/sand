{
  "name": "sand",
  "version": "2.1.0",
  "description": "sand核心包仓库",
  "author": "jianghe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/372623460jh/sand.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/372623460jh/sand/issues"
  },
  "homepage": "https://github.com/372623460jh/sand#readme",
  "engines": {
    "node": ">=10.16.0"
  },
  "scripts": {
    "init": "npm run clean && npm i && npm run bootstrap",
    "clean": "npm run clean:base && npm run clean:debug && npm run clean:staging && npm run clean:docs && lerna clean --yes",
    "clean:base": "rm -rf ./node_modules ./coverage ./package-lock.json ./packages/*/{dist,es,lib,node_modules} ./dist",
    "clean:docs": "rm -rf ./.umi ./dist-docs",
    "clean:debug": "rm -rf ./debug/*/{dist,es,lib} ./debug/*/*/*/{dist,es,lib}",
    "clean:staging": "rm -rf ./packages/sand-cli/staging",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.backup.md -s",
    "bootstrap": "lerna bootstrap --npm-client npm --hoist && npm run build",
    "copy:staging": "node ./packages/sand-cli/script/copyStaging.js",
    "build": "npm run copy:staging && sand-build build -t lib -e development -l",
    "build:watch": "npm run copy:staging && sand-build build -t lib -e development -w -l",
    "build:production": "npm run copy:staging && sand-build build -t lib -e production -l",
    "build:demo": "sand-build build -t demo -e production",
    "build:docs": "dumi build",
    "server": "sand-build start -t demo",
    "start": "npm-run-all --parallel --print-label build:watch server",
    "start:docs": "dumi dev",
    "publish": "npm run build:production && lerna publish",
    "lint": "eslint ./packages ./examples --ext .jsx,.js,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:style": "stylelint \"packages/**/*.less\" \"examples/**/*.less\" --syntax less",
    "lint:style:fix": "npm run lint:style -- --fix",
    "test": "jest",
    "ci": "npm run lint:fix && npm run lint:style:fix && npm run lint && npm run lint:style && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "post-commit": [
    "changelog"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@jianghe/sand-build": "2.0.1-0",
    "@jianghe/sand-lint": "2.0.1-0",
    "@types/jest": "^26.0.19",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/webpack-env": "^1.16.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "conventional-changelog": "^3.1.24",
    "dumi": "^1.0.38",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "lerna": "2.11.0",
    "npm-run-all": "^4.1.5",
    "post-commit": "0.0.1",
    "stylelint": "^13.8.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@babel/runtime": "7.12.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "@ant-design/icons": "^4.3.0",
    "@jianghe/sand-viewport": "^1.2.6-3",
    "antd": "^4.9.4"
  }
}
