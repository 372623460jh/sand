{
  "name": "sand-bff",
  "version": "1.0.0",
  "description": "sand通用的bff应用",
  "main": "./src/app.js",
  "scripts": {
    "init": "npm run clean && npm i && npm run start",
    "clean": "rm -rf ./node_modules ./coverage ./package-lock.json",
    "start": "node ./src/app.js",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "ci": "npm run lint:fix && npm run lint && npm run test"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "pre-commit": [
    "ci"
  ],
  "author": "jianghe",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.0.0",
    "koa2-cors": "^2.0.4",
    "sequelize": "5.21.10",
    "mysql": "2.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "eslint": "^6.8.0",
    "pre-commit": "^1.2.2",
    "jest": "^26.0.1",
    "babel-eslint": "^10.1.0",
    "eslint-config-airbnb-base": "^14.1.0"
  }
}
