{
  "name": "sand",
  "version": "1.0.0",
  "description": "sand核心包仓库",
  "author": "jianghe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/372623460jh/sand.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/372623460jh/sand/issues"
  },
  "homepage": "https://github.com/372623460jh/sand#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@jianghe/sand-build": "^1.0.1-0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "lerna": "2.11.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^13.2.0",
    "stylelint-scss": "^3.13.0"
  },
  "scripts": {
    "init": "npm run clean && npm i && npm run bootstrap",
    "clean": "rm -rf ./node_modules ./packages/*/{dist,esm,cjs,./node_modules} && lerna clean --yes ",
    "bootstrap": "lerna bootstrap --hoist && npm run build",
    "build": "sand-build build --env dev --link",
    "build:watch": "sand-build build --env dev --link --watch",
    "build:production": "sand-build build --env prod --link",
    "publish": "npm run build:production && lerna publish",
    "lint": "eslint ./packages --ext .jsx,.js,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:style": "stylelint \"packages/**/*.{acss,less}\" --syntax less",
    "lint:style:fix": "npm run lint:style -- --fix",
    "test": "",
    "ci": "npm run lint:fix && npm run lint:style:fix && npm run test && npm run lint && npm run lint:style"
  },
  "pre-commit": [
    "ci"
  ],
  "ci": {}
}
