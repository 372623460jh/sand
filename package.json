{
  "name": "sand",
  "version": "1.0.3-11",
  "description": "sand核心包仓库",
  "author": "jianghe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/372623460jh/sand.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/372623460jh/sand/issues"
  },
  "homepage": "https://github.com/372623460jh/sand#readme",
  "engines": {
    "node": ">=10.16.0"
  },
  "scripts": {
    "init": "npm run clean && npm i && npm run bootstrap",
    "clean": "npm run clean:base && npm run clean:debug && npm run clean:staging && lerna clean --yes",
    "clean:base": "rm -rf ./node_modules ./coverage ./package-lock.json ./packages/*/{dist,esm,cjs,node_modules} ./dist",
    "clean:debug": "rm -rf ./debug/*/{dist,esm,cjs} ./debug/*/*/*/{dist,esm,cjs}",
    "clean:staging": "rm -rf ./packages/sand-cli/staging",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "bootstrap": "lerna bootstrap --npm-client npm --hoist && npm run build",
    "copy:staging": "node ./packages/sand-cli/script/copyStaging.js",
    "build": "npm run copy:staging && sand-build build -t lib -e development -l",
    "build:watch": "npm run copy:staging && sand-build build -t lib -e development -w -l",
    "build:production": "npm run copy:staging && sand-build build -t lib -e production -l",
    "build:demo": "sand-build build -t demo -e production",
    "server": "sand-build start -t demo",
    "start": "npm-run-all --parallel --print-label build:watch server",
    "publish": "npm run build:production && lerna publish",
    "lint": "eslint ./packages ./examples ./staging --ext .jsx,.js,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:style": "stylelint \"packages/**/*.less\" \"examples/**/*.less\" \"staging/**/*.less\" --syntax less",
    "lint:style:fix": "npm run lint:style -- --fix",
    "test": "jest",
    "ci": "npm run lint:fix && npm run lint:style:fix && npm run lint && npm run lint:style && npm run test"
  },
  "pre-commit": [
    "ci"
  ],
  "post-commit": [
    "changelog"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@jianghe/sand-build": "^1.0.3-0",
    "@jianghe/sand-lint": "^1.0.3-0",
    "conventional-changelog": "^3.1.21",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "lerna": "2.11.0",
    "npm-run-all": "^4.1.5",
    "post-commit": "0.0.1",
    "pre-commit": "^1.2.2",
    "stylelint": "^13.2.0"
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "antd": "^4.2.0"
  }
}
